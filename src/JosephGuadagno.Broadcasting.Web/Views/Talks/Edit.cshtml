@model JosephGuadagno.Broadcasting.Web.Models.TalkViewModel;

@{
    ViewData["Title"] = $"Edit - {Model.Name}";
}
<h1>Edit Talk '@Model.Name'</h1>
<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="EngagementId" />
    <div class="form-group">
        <label class="control-label">Name</label>
        <input asp-for="Name" type="text" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="control-label">Url for Conference Talk</label>
        <input asp-for="UrlForConferenceTalk" type="url" class="form-control" />
        <span asp-validation-for="UrlForConferenceTalk" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="control-label">Url for Talk</label>
        <input asp-for="UrlForTalk" type="url" class="form-control" />
        <span asp-validation-for="UrlForTalk" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="control-label">Start Date/Time</label>
        <input asp-for="StartDateTime" type="datetime-local" class="form-control" />
        <span asp-validation-for="StartDateTime" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="control-label">End Date/Time</label>
        <input asp-for="EndDateTime" type="datetime-local" class="form-control" />
        <span asp-validation-for="EndDateTime" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="control-label">Talk Location</label>
        <input asp-for="TalkLocation" type="text" class="form-control" />
        <span asp-validation-for="TalkLocation" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="control-label">Comments</label>
        <input asp-for="Comments" type="text" class="form-control" />
        <span asp-validation-for="Comments" class="text-danger"></span>
    </div>
    <br />
    <button type="submit" class="btn btn-primary">
        <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-plus-circle" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd" d="M8 3.5a.5.5 0 0 1 .5.5v4a.5.5 0 0 1-.5.5H4a.5.5 0 0 1 0-1h3.5V4a.5.5 0 0 1 .5-.5z"/>
            <path fill-rule="evenodd" d="M7.5 8a.5.5 0 0 1 .5-.5h4a.5.5 0 0 1 0 1H8.5V12a.5.5 0 0 1-1 0V8z"/>
            <path fill-rule="evenodd" d="M8 15A7 7 0 1 0 8 1a7 7 0 0 0 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
        </svg>
        Save
    </button>
</form>